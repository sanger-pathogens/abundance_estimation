params {
    queue_size = 50
    submit_rate_limit = '50/2min'
    results_dir = "./nextflow_results"
    manifest = ""
    stb_file = "/lustre/scratch125/pam/pathogen/pathpipe/gtdb/gtdb_genomes_reps_r207/gtdb_genomes_reps_r207.stb"
    genome_dir = "/data/pam/team162/shared/gtdb_genomes_reps_r207/gtdb_genomes_reps_r207_genome_dir"
    sourmash_db = "/data/pam/team162/shared/sourmash_db/gtdb-rs207.genomic-reps.dna.k31.zip"
    bowtie2_samtools_threads = 4
    instrain_threads = 4
    instrain_full_output = false
    skip_qc = false
    cleanup_intermediate_files = false
    instrain_queue = "normal"
    instrain_quick_profile = false
    bowtie2_samtools_only = false
    help = false
}


profiles {

    docker {
        docker {
            enabled = true
        }
    }

    // Sanger local configuration for testing
    sanger_local {

        docker {
            enabled = false
        }

        singularity {
            enabled = true
            autoMounts = true
            cacheDir = "$PWD"
            runOptions = "--bind /lustre,/nfs,/software,/data"
        }

        process {
            errorStrategy = {task.attempt <= 2 ? "retry" : "terminate"}
            maxRetries = 1
            executor = "local"
        }
    }

    // Basic configuration for Nextflow LSF management on the Sanger farm.
    standard {

        docker {
            enabled = false
        }

        singularity {
            enabled = true
            autoMounts = true
            cacheDir = "$PWD"
            runOptions = "--bind /lustre,/nfs,/software,/data"
        }

        process {
            cpus = 1
            memory = "1GB"
            queue = "normal"
            errorStrategy = {task.attempt <= 2 ? "retry" : "terminate"}
            maxRetries = 1

            withName:METAWRAP_QC {
                cpus = 1
                queue = { task.attempt < 2 ? "normal" : "long" }
                memory = { 10.GB * task.attempt }
                executor = "lsf"
            }

            withName:MERGE_FASTQS {
                cpus = 1
                queue = { task.attempt < 2 ? "normal" : "long" }
                memory = { 1.GB * task.attempt }
                executor = "lsf"
            }

            withName:SUBSET_GTDB {
                cpus = 1
                queue = "normal"
                memory = { 1.GB * task.attempt }
                executor = "lsf"
            }

            withName:GENERATE_STB {
                cpus = 1
                queue = "normal"
                memory = { 1.GB * task.attempt }
                executor = "lsf"
            }

            withName:SOURMASH_SKETCH {
                cpus = 1
                queue = { task.attempt < 2 ? "normal" : "long" }
                memory = { 10.GB * task.attempt }
                executor = "lsf"
            }

            withName:SOURMASH_GATHER {
                cpus = 1
                queue = { task.attempt < 2 ? "normal" : "long" }
                memory = { 10.GB * task.attempt }
                executor = "lsf"
            }

            withName:BOWTIE_INDEX {
                cpus = 4
                queue = { task.attempt < 2 ? "normal" : "long" }
                memory = { 40.GB * task.attempt }
                executor = "lsf"
                maxRetries = 3
            }

            withName:INSTRAIN {
                cpus = params.instrain_threads
                memory = {10.GB + (25.GB * task.attempt)}
                queue = params.instrain_queue
                executor = "lsf"
                errorStrategy = { task.exitStatus == 1 ? 'ignore' : task.attempt <= 3 ? "retry" : "terminate" }
                maxRetries = 3
            }

            withName:BOWTIE2SAMTOOLS {
                cpus = params.bowtie2_samtools_threads
                queue = { task.attempt < 2 ? "normal" : "long" }
                memory = {10.GB + (10.GB * task.attempt)}
                executor = "lsf"
                maxRetries = 3
            }
        }
        executor {
            name = "lsf"
            perJobMemLimit = true
            // Maximum number of jobs to spawn at once - adjust as necessary
            queueSize = params.queue_size
            submitRateLimit = params.submit_rate_limit
            jobName = { "meta_abundance - $task.name - $task.hash" }
            pollInterval = "5 sec"
        }
    }
}
